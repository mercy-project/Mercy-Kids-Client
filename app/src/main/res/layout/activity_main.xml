<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.mercy.kids.client.main.viewmodel.MainActivityViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/mainMotionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/scene_activity_main"
        transitionProgress="@{viewModel.motionLayoutProgress}"
        tools:context=".main.activity.MainActivity">
        
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintVertical_chainStyle="packed"
            app:navigationIcon="@drawable/ic_baseline_home_24"
            tools:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_toTopOf="@id/nav_host_fragment"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintEnd_toEndOf="parent"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintTop_toBottomOf="@id/main_toolbar"
            tools:layout_constraintBottom_toTopOf="@id/bottom_nav"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph_main_activity"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            tools:layout_constraintTop_toBottomOf="@id/nav_host_fragment"
            tools:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/menu_main_activity" />

        <!--<androidx.fragment.app.FragmentContainerView
            android:id="@+id/video_player_fragment_container"
            android:name="com.mercy.kids.client.main.fragment.VideoPlayerFragment"
            android:elevation="20dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout="@layout/layout_main_video_player"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintTop_toBottomOf="@id/main_toolbar"
            tools:layout_constraintBottom_toTopOf="@id/bottom_nav"/>-->

    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>
