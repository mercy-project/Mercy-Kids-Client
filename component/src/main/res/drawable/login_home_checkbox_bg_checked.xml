<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <corners android:radius="1dp" />
            <gradient
                android:startColor="#fad302"
                android:centerColor="#fad302"
                android:endColor="#fad302"
                android:angle="270" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
    <item
        android:width="5dp"
        android:height="1dp"
        android:top="13dp"
        android:left="3.5dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#fff"/>
            </shape>
        </rotate>
    </item>
    <item
        android:width="14dp"
        android:height="1dp"
        android:top="10dp"
        android:left="5dp">
        <rotate
            android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="#fff"/>
            </shape>
        </rotate>
    </item>
</layer-list>