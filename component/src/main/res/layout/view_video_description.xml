<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <merge
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:paddingVertical="12dp"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/channel_profile_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/video_title"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:maxLines="2"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/video_metadata"
            app:layout_constraintStart_toEndOf="@id/channel_profile_image"
            app:layout_constraintEnd_toStartOf="@id/options_button"
            tools:text="샘플 영상 타이틀은 다음과 같고 최대 2줄까지의 텍스트가 들어갈 수 있습니다." />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/video_metadata"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@id/video_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/video_title"
            app:layout_constraintEnd_toEndOf="@id/video_title"
            tools:text="채널 이름 | 조회수 8.9만회 | 3개월 전" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/options_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="12dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/video_title"
            app:layout_constraintEnd_toEndOf="parent"/>

    </merge>

</layout>
