<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="#000000"
    tools:layout_width="match_parent"
    tools:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    tools:padding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_email_validation_parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/bg_login_home_input"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_email_validation_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_text_validation_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#c7c7c7"
            android:textColor="#205072"
            android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_icon_validation_result"
            tools:textColorHint="#205072"
            tools:hint="abcd@@naver.com"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_icon_validation_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_text_validation_input"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_email_validation_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FD3D41"
        android:textSize="12sp"
        android:layout_margin="4dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_email_validation_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="메일 형식이 올바르지 않습니다." />

</merge>